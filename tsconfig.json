{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "public",
    "rootDir": "patterns",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
